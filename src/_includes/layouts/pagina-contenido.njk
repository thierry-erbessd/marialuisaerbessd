{% extends "layouts/base.njk" %}

{% block main %}
<article class="page">
  <header class="page-header">
    <h1>{{ title }}</h1>
    {% if subtitle %}
      <p class="page-subtitle">{{ subtitle }}</p>
    {% endif %}
  </header>
  <section class="page-content">
    {{ content | safe }}
  </section>
</article>
{% endblock %}
